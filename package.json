{
  "name": "ocignis-bot",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "// Chore scripts (executed locally)": "",
    "prepare": "husky install",
    "build-ocignis-shared": "tsup --config build-ocignis-shared/tsup.config.ts && npm run format-fix",
    "dev": "npm run docker-compose-run",
    "dev-changed-deps": "npm run docker-compose-run-changed-deps",
    "build": "shx rm -rf dist && tsc -p tsconfigs/tsconfig.build.json && shx cp -R src/server/public dist/server",
    "lint": "eslint --max-warnings 0 .",
    "lint-fix": "eslint --fix .",
    "lint-staged-husky": "lint-staged",
    "tsc": "tsc -p tsconfig.json",
    "test": "jest --verbose",
    "test-watch": "jest --verbose --watch",
    "format-lint": "prettier --config .prettierrc --check --ignore-unknown .",
    "format-fix": "prettier --config .prettierrc --write --ignore-unknown -l .",
    "commit": "git-cz",
    "clean": "shx rm -rf node_modules coverage dist",
    "// Backtest scripts": "",
    "backtest-download-data": "ts-node -r tsconfig-paths/register binance-datasets/downloadData/index.ts",
    "backtest-seed-database": "env-cmd -f envs/dev-seed-backtest.env ts-node -r tsconfig-paths/register binance-datasets/seedDatabase/index.ts",
    "backtest-run": "env-cmd -f envs/dev-seed-backtest.env ts-node -r tsconfig-paths/register ./src/bot/run/botBacktest/index.ts",
    "// DB scripts": "",
    "db-prisma-client-generate": "npx prisma generate",
    "db-migration-generate": "env-cmd -f envs/dev-seed-backtest.env npx prisma migrate dev",
    "db-migration-run": "env-cmd -f envs/${ENV}.env npx prisma migrate deploy",
    "db-migration-run-dev": "ENV=dev-seed-backtest.env npm run db-migration-run",
    "db-migration-run-prod": "ENV=prod npm run db-migration-run",
    "// Docker": "",
    "docker-dev": "nodemon -r tsconfig-paths/register ./src/index.ts",
    "docker-prod": "NODE_PATH=./dist node dist/index.js",
    "docker-compose-run": "docker compose up",
    "docker-compose-run-changed-deps": "docker compose down && docker compose up --build"
  },
  "dependencies": {
    "@prisma/client": "4.15.0",
    "@trpc/server": "10.28.2",
    "binance": "2.8.0",
    "cors": "2.8.5",
    "date-fns": "2.30.0",
    "express": "4.18.2",
    "mathjs": "11.8.0",
    "morgan": "1.10.0",
    "serve-index": "1.9.1",
    "superjson": "1.12.3",
    "technicalindicators": "3.1.0",
    "winston": "3.9.0",
    "winston-daily-rotate-file": "4.7.1",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.5",
    "@commitlint/config-conventional": "17.6.5",
    "@types/adm-zip": "0.5.0",
    "@types/cors": "2.8.13",
    "@types/express": "4.17.17",
    "@types/fs-extra": "11.0.1",
    "@types/jest": "29.5.2",
    "@types/morgan": "1.9.4",
    "@types/node": "20.2.5",
    "@types/serve-index": "1.9.1",
    "@typescript-eslint/eslint-plugin": "5.59.8",
    "@typescript-eslint/parser": "5.59.8",
    "adm-zip": "0.5.10",
    "commitizen": "4.3.0",
    "env-cmd": "10.1.0",
    "eslint": "8.41.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-import-resolver-typescript": "3.5.5",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-prettier": "4.2.1",
    "fast-csv": "4.3.6",
    "fs-extra": "11.1.1",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "jest-config": "29.5.0",
    "lint-staged": "13.2.2",
    "nodemon": "2.0.22",
    "prettier": "2.8.8",
    "pretty-quick": "3.1.3",
    "prisma": "4.15.0",
    "shx": "0.3.4",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1",
    "tsc-files": "1.1.3",
    "tsconfig-paths": "4.2.0",
    "tsup": "6.7.0",
    "typescript": "5.1.3"
  },
  "engines": {
    "node": ">=18.16.0",
    "npm": ">=9.5.1"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  }
}
